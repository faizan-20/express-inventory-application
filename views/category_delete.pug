extends layout

block content
  h1 #{title}: #{category.name}

  if category_watches.length

    p #[strong Delete the following watches before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Watches

      dl
      each book in category_watches
        dt
          a(href=book.url) #{book.name}
        dd #{book.description}

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div.form-group
        input#categoryid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete
